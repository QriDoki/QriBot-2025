# NoneBot 配置
ENVIRONMENT=production
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8080

# OneBot 连接配置
# ONEBOT_ACCESS_TOKEN=your_access_token_here

# OpenAI 配置
OPENAI_API_KEY=your_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Justice 插件白名单配置 (JSON 数组格式)
JUSTICE_USER_ID_ALLOW_LIST=[123456789, 987654321]

# Fontconfig 配置 (已在 Dockerfile 中配置，通常不需要修改)
FONTCONFIG_PATH=/etc/fonts
FC_LANG=zh_CN
